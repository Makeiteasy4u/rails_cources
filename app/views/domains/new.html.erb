<h1>Create a new post domain</h1>
<!-- show the errrors message to the users -->

	<% if @domain.errors.any? %>
	
		<ul>
			<% @domain.errors.full_messages.each do |msg| %>
			<li>
					<%= msg %>
			</li>
		</ul>	
	<% end %>
	<% end %>


<!-- Form -->
<%= form_for @domain do |f| %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</p>	
	<p>
		<%= f.submit %>
	</p>	
	
<% end %>	